{
    "compilerOptions": {
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "temp",
        "outDir": "dist",
        "module": "CommonJS",
        "target": "ES6",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowJs": true
    },
    "include": ["**/*.ts"],
    "exclude": ["dist", "node_modules"]
}
